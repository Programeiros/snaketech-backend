{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./bin",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "sourceMap": true,
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "bin/**/*"],
}
